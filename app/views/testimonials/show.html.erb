<div class="container testimonial text-center">
  <div class="row">
    <div class="col-10 offset-1 col-md-6 offset-md-3">
      <%= image_tag(@testimonial.photo.url.to_s , class: "img-fluid", alt: @testimonial.signature) %>
      <p class="signature"><%= @testimonial.signature %></p>
      <p class="date"><%= @testimonial.testimonial_on.strftime("%d/%m/%Y")  %></p>
    </div>
  </div>
  <% if @testimonial.language_id == 1 %>
    <p><%= @testimonial.description %></p>
  <% else %>
    <p class="font-gr"><%= @testimonial.description %></p>
  <% end %>

  <div class="links">
    <div class="row">
      <div class="col col-10 offset-1 col-md-5 offset-md-0">
        <%= link_to 'Edit testimonial',edit_testimonial_path(@testimonial), class: "btn" %>
      </div>
      <div class="col col-10 offset-1 col-md-3 offset-md-0">
        <%= link_to 'Delete testimonial'.html_safe, @testimonial, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-red" %>
      </div>
      <div class="col col-10 offset-1 col-md-4 offset-md-0">
        <%= link_to "Show all testimonials", testimonials_path, class: "btn" %>
      </div>
    </div>
  </div>

</div>
