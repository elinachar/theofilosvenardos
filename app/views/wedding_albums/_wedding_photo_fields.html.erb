<div class="nested-fields">
  <% if @wedding_album.wedding_photos.count > 0 %>
    <div class="row uploaded-wedding-photo">
      <%= f.label :photo, " #{f.index.to_i + 1 }", class: "col-1 sr-only" %>
      <div class="col-2">
        <%= image_tag( @wedding_album.wedding_photos[f.index.to_i].photo.url.to_s , class: "img-fluid", alt: @wedding_album.photo_square.url.to_s) %>
      </div>
      <p class="col-3 display-md"><%= @wedding_album.wedding_photos[f.index.to_i].photo_identifier %></p>
      <div class="col-7 col-md-5">
        <%= f.file_field :photo %>
      </div>
      <%= link_to_remove_association '<i class="fas fa-times fa-lg"></i>'.html_safe, f, class: "delete-x col-1 col-md-2 text-center", data: { confirm: 'Are you sure?' } %>
    </div>
  <% else %>
    <div class="upload-wedding-photo">
      <%= f.label :photo, "Photo #{f.index.to_i + 1 }", class: "wedding-photo-label sr-only" %>
      <%= f.file_field :photo %>
      <%= link_to_remove_association '<i class="fas fa-times fa-lg"></i>'.html_safe, f, class: "delete-x" %>
    </div>
  <% end %>
</div>
