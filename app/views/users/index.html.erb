<div class="container form devise text-center">
  <h1>Users</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user, class: "btn" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, class: "btn", data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Create new User', new_user_path, class: "btn" %>
</div>
