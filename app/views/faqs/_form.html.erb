<%= form_with(model: faq, local: true) do |f| %>
  <% if faq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(faq.errors.count, "error") %> prohibited this faq from being saved:</h2>

      <ul>
      <% faq.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :question %>
    <%= f.text_area :question, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :answer %>
    <%= f.text_area :answer, rows: 10, class: 'form-control' %>
  </div>

  <div class="actions">
    <% if faq.persisted? %>
      <%= f.submit "Update question", class: "btn" %>
      <%= link_to "Cancel", faq, class: "btn", data: { confirm: "Editing will be canceled. No changes will be saved. Are you sure?"} %>

    <% else %>
      <%= f.submit "Create question", class: "btn" %>
      <%= link_to "Cancel", faqs_path, class: "btn", data: { confirm: "Editing will be canceled. No changes will be saved. Are you sure?"} %>
    <% end %>
  </div>
<% end %>
