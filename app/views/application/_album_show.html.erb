<% if request.url.include? "wedding" %>
  <% album = @wedding_album %>
  <% album_photos = @wedding_album.wedding_photos %>
  <% album_translations = @wedding_album.wedding_album_translations %>
  <% album_kind = "wedding" %>
<% elsif request.url.include? "baptism"  %>
  <% album = @baptism_album %>
  <% album_photos = @baptism_album.baptism_photos %>
  <% album_translations = @baptism_album.baptism_album_translations %>
  <% album_kind = "baptism" %>
<% elsif request.url.include? "interior"  %>
  <% album = @interior_album %>
  <% album_photos = @interior_album.interior_photos %>
  <% album_translations = @interior_album.interior_album_translations %>
  <% album_kind = "interior" %>
<% end %>


<div class="header">
  <% if album.photo_square? %>
    <%= image_tag( album.photo_square.url.to_s , class: "img-fluid", alt: album.photo_square_identifier) %>
  <% end %>

  <h3><%= album_translations.first.title %></h3>
  <h4><%= album_translations.first.description %></h4>
</div>

<div class="row display-xs" style= "display: none">
  <div class="col-10 offset-1 column">
    <% album_photos.each_with_index do |photo, index| %>
      <%= image_tag(photo.photo.url.to_s , class: "img-fluid open-modal-image hover-shadow", alt: "#{album_translations.first.title} photo", data: {slide: index}) %>
    <% end %>
  </div>
</div>

<div class="row display-sm" style= "display: none">
  <div class="col-6 column">
    <% @photos_1_2.each_with_index do |photo, index| %>
      <%= image_tag(photo.photo.url.to_s , class: "img-fluid open-modal-image hover-shadow", alt:  "#{album_translations.first.title} photo", data: {slide: 2*index}) %>
    <% end %>
  </div>
  <div class="col-6 column">
    <% @photos_2_2.each_with_index do |photo, index| %>
      <%= image_tag(photo.photo.url.to_s , class: "img-fluid open-modal-image hover-shadow", alt:  "#{album_translations.first.title} photo", data: {slide: 2*index+1}) %>
    <% end %>
  </div>
</div>

<div class="row display-md">
  <div class="col-4 column">
    <% @photos_1_3.each_with_index do |photo, index| %>

      <%= image_tag( photo.photo.url.to_s , class: "img-fluid open-modal-image hover-shadow", alt:  "#{album_translations.first.title} photo", data: {slide: index+index*2}) %>

    <% end %>

  </div>
  <div class="col-4 column">
    <% @photos_2_3.each_with_index do |photo, index| %>
      <%= image_tag(photo.photo.url.to_s , class: "img-fluid open-modal-image hover-shadow", alt:  "#{album_translations.first.title} photo", data: {slide: 3*index+1} ) %>
    <% end %>
  </div>
  <div class="col-4 column">
    <% @photos_3_3.each_with_index do |photo, index| %>
      <%= image_tag(photo.photo.url.to_s , class: "img-fluid open-modal-image hover-shadow", alt:  "#{album_translations.first.title} photo", data: {slide: 3*index+2} ) %>
    <% end %>
  </div>
</div>


<!-- The Modal/Lightbox -->
<div id="modal" class="mdl row h-100 w-100">
  <span class="close cursor">&times;</span>
  <div class="mdl-content my-auto">
    <% album_photos.each_with_index do |photo, index| %>
      <div class="slides mx-auto">
        <%= image_tag(photo.photo.url.to_s , class: "img-fluid", alt:  "#{album_translations.first.title} photo")%>
      </div>
    <% end %>

    <!-- Next/previous controls -->
    <a class="prev">&#10094;</a>
    <a class="next">&#10095;</a>
  </div>
</div>
